extends ../layouts/common.pug

block content
    h1 Create User

    if errors
      each error in errors
        .alert.alert-danger= error

    form(action="/users/create", method="POST", enctype="multipart/form-data")
      .form-group
        label Name
        input#name(name="name", type="text", class="form-control", value=values ? values.name : "")
      .form-group
        label Phone
        input#phone(name="phone", type="text", class="form-control", value=values ? values.phone : "")
      .form-group
        label Avatar
        input#avatar(name="avatar", type="file", class="form-control-file")
      button.btn.btn-primary Create 	