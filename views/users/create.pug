extends ../layouts/common.pug

block content
    h1 Create User

    if errors
      each error in errors
        .alert.alert-danger= error

    form(action="/users/create", method="POST")
      .form-group
        label Name
        input(name="name", type="text", class="form-control", value=values ? values.name : "")
      .form-group
        label Phone
        input(name="phone", type="text", class="form-control", value=values ? values.phone : "")
      button.btn.btn-primary Create 	